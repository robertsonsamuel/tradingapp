extends ./layout2

block content
  #itemModal.modal.fade(role="dialog")
    .modal-dialog.modal-lg
      .modal-content
        .modal-header
          h4.modal-title Items in the Room
          button.close(data-dismiss="modal") &times; 
        .modal-body
          .form-group
            label.dropdownLabel(for="sel1") Currently Available Items:
            button.addItem.btn.btn-success Offer
            select(class="form-control" id="sel1")
              option Select One
              option.default None Available Currently
              option.basketball Basketball
              option.baseball Baseball

          
  .container
    br
    .jumbotron
      h1 Items for Trade!
    .form-group
      label(for="roomInput") Add a Room: 
      input#roomInput.form-control(type="text")
      button.addRoom.btn.btn-success Add
    .rooms.hide
      h2 Your Rooms
      each element in rooms
        .roomContainer(id="#{element._id}")
          h3.room= element.roomName
          button.killRoom.btn.btn-danger
            span.killRoom.glyphicon.glyphicon-remove

